<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <android.support.v7.widget.CardView
        android:id="@+id/forgetpassword_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/forgetpassword_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:src="@mipmap/ic_back3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="找回密码"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/forgetpassword_edt_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/forgetpassword_header"
        android:background="@null"
        android:ems="11"
        android:hint="手机号:"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        >
        <requestFocus />
    </EditText>


    <TextView
        android:id="@+id/forgetpassword_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgetpassword_header"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp"
        android:text=" 获取验证码 "
        android:background="@drawable/verify_bg"
        android:textColor="@color/navigation"
        android:textSize="18sp"
        android:layout_marginTop="52dp"
        />

    <!-- 横线  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@id/forgetpassword_edt_phone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />


    <EditText
        android:id="@+id/forgetpassword_edt_code"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:hint="验证码:"
        android:inputType="textPassword"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp"
        android:layout_below="@id/forgetpassword_edt_phone"
        />

    <!-- 横线  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@id/forgetpassword_edt_code"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />

    <EditText
        android:id="@+id/forgetpassword_edt_newpassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:hint="新密码:"
        android:inputType="textPassword"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="16sp"
        android:layout_below="@id/forgetpassword_edt_code"
        />

    <!-- 横线  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@id/forgetpassword_edt_newpassword"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />

    <Button
        android:id="@+id/forgetpassword_btn_revise"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_button_style"
        android:text="修改"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@id/forgetpassword_edt_newpassword"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        />

</RelativeLayout>