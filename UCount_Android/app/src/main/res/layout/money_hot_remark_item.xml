<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
    android:id="@+id/money_hot_remark_cardview"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bg"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/money_hot_remark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/ic_launcher"
                android:gravity="center"
                android:text="昵称昵称:" />

            <TextView
                android:id="@+id/money_hot_remark_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/money_hot_remark_name"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="-8dp"
                android:text="2017年08月21日 17:18:48"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/money_hot_remark_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/money_hot_remark_date"
                android:layout_marginTop="16dp"
                android:paddingLeft="48dp"
                android:paddingRight="24dp"
                />

            <ImageView
                android:id="@+id/money_hot_remark_reply"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_good"
                android:layout_gravity="center"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/money_hot_remark_content"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

