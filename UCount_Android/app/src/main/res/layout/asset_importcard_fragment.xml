<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/asset_importcard_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/asset_importcard_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:src="@mipmap/ic_back3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="添加支付宝"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/asset_importcard_edtId"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:hint="邮箱/手机号/淘宝会员名"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:layout_below="@id/asset_importcard_header"
        >
        <requestFocus />
    </EditText>

    <!-- 横线  -->
    <View
        android:id="@+id/asset_importcard_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1"
        android:layout_below="@id/asset_importcard_edtId"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        />


    <EditText
        android:id="@+id/asset_importcard_edtPwD"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:ems="10"
        android:hint="支付宝登录密码"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:layout_below="@id/asset_importcard_line"
        >

    <requestFocus />
    </EditText>

    <Button
        android:id="@+id/asset_importcard_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_button_style"
        android:text="开始同步"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:layout_below="@id/asset_importcard_edtPwD"
        />

</RelativeLayout>