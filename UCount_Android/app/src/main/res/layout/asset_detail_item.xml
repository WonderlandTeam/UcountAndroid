<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/asset_detail_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="2dp"
    android:background="@color/main_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/asset_detail_item_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/type_cost_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:id="@+id/asset_detail_item_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:text="饮食"
            android:layout_toRightOf="@id/asset_detail_item_img"
            />

        <TextView
            android:id="@+id/asset_detail_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="2017年\n9月3日\n14：24"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/asset_detail_item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:textColor="@color/text_green"
            android:gravity="center"
            android:text="20.00"
            android:textSize="20sp"
            android:layout_toLeftOf="@id/asset_detail_item_tv_date"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是备注我是备注我是备注我是备注"
        android:layout_gravity="bottom"
        android:textColor="@color/text_gray"
        />

</android.support.v7.widget.CardView>