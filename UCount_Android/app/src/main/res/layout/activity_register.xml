<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:padding="@dimen/activity_horizontal_margin">


    <EditText
        android:id="@+id/et_reg_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:background="@null"
        android:ems="11"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:layout_marginTop="15dp">
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/et_reg_username"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/et_reg_phone"
        android:hint="请输入用户名"
        android:inputType="text"
        android:layout_weight="1"
        android:background="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        >
    </EditText>

    <EditText
        android:id="@+id/et_reg_pass"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:hint="@string/pwdtxthint"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:maxLines="1"
        android:textColorHint="#999999"
        android:textSize="18sp"
        android:layout_below="@id/et_reg_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="注册"
        android:background="@drawable/login_button_style"
        android:layout_below="@+id/et_reg_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="21sp"/>

</RelativeLayout>