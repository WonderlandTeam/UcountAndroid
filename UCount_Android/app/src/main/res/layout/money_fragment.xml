<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/money_nts_top"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        app:nts_active_color="#BBECB9"
        app:nts_color="#BBECB9"
        app:nts_corners_radius="1dp"
        app:nts_inactive_color="@color/text_gray"
        app:nts_size="15sp"
        app:nts_titles="@array/money"
        app:nts_weight="3dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/money_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/money_nts_top"
        />

    <FrameLayout
        android:id="@+id/money_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/money_nts_top"
        >
    </FrameLayout>
</RelativeLayout>
