<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <android.support.v7.widget.CardView
        android:id="@+id/asset_cash_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/asset_cash_detail_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@mipmap/ic_back3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="明细"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/asset_cash_detail_txt_intitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_cash_detail_header"
        android:layout_marginLeft="16dp"
        android:text="流入"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/asset_cash_detail_txt_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_cash_detail_header"
        android:layout_marginLeft="8dp"
        android:text="200.0"
        android:textColor="@color/text_red"
        android:layout_toEndOf="@+id/asset_cash_detail_txt_intitle"
        />

    <TextView
        android:id="@+id/asset_cash_detail_txt_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_cash_detail_header"
        android:text="1000.0"
        android:textColor="@color/text_green_darker"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/asset_cash_detail_txt_outtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset_cash_detail_header"
        android:layout_toLeftOf="@id/asset_cash_detail_txt_out"
        android:text="流出"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_marginRight="8dp"
        />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/asset_cash_detail_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/asset_cash_detail_txt_in"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/asset_cash_detail_recyclerview"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
             />
    </android.support.v4.widget.SwipeRefreshLayout>


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/asset_cash_detail_bt_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_plus"
        app:fab_colorNormal="@color/main_bg"
        />

</android.support.percent.PercentRelativeLayout>