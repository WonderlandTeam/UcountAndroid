<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/asset_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/asset_img_account"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
            />


            <TextView
                android:id="@+id/asset_txt_accounttotal"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:background="#00000000"
                android:gravity="center"
                android:typeface="sans"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/asset_txt_accountname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/asset_img_account"
                android:layout_centerVertical="true"
                android:text="luckylucky"
                android:maxLines="1"
                android:maxEms="6"
                android:typeface="monospace"
                android:ellipsize="middle"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>