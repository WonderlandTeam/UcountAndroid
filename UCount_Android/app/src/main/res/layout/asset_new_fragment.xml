<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/asset_new_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        >

        <ImageView
            android:id="@+id/asset_new_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@mipmap/ic_back3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="新建账户"
            android:textSize="20sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/asset_new_cardview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/asset_new_header"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/main_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="账户名称"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                />

            <ImageView
                android:id="@+id/asset_new_cardview_img_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_more"
                />

            <TextView
                android:id="@+id/asset_new_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="现金账户"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/asset_new_cardview_img_name"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/asset_new_cardview_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/asset_new_cardview_name"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:background="@color/main_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="账户类型"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                />

            <ImageView
                android:id="@+id/asset_new_img_type"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_more"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/asset_new_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="银行卡"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/asset_new_img_type"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/asset_new_cardview_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/asset_new_cardview_type"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/main_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="账户余额"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                />

            <ImageView
                android:id="@+id/asset_new_img_balance"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@mipmap/ic_more"
                />

            <TextView
                android:id="@+id/asset_new_tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="10"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/asset_new_img_balance"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <at.markushi.ui.CircleButton
        android:id="@+id/asset_new_bt_save"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/ic_tick"
        app:cb_color="#99CC00"
        app:cb_pressedRingWidth="8dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        >
    </at.markushi.ui.CircleButton>
</RelativeLayout>