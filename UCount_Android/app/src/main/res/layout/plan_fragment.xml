<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plan_budget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >


    <FrameLayout
        android:id="@+id/plan_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.gigamole.navigationtabstrip.NavigationTabStrip
                android:id="@+id/plan_nts_top"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                app:nts_active_color="#BBECB9"
                app:nts_color="#BBECB9"
                app:nts_corners_radius="1dp"
                app:nts_inactive_color="@color/text_gray"
                app:nts_size="15sp"
                app:nts_titles="@array/plan"
                app:nts_weight="3dp"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/plan_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/plan_nts_top"
                />
        </RelativeLayout>

    </FrameLayout>




</RelativeLayout>
