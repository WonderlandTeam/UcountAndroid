<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/main_bg">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
        <ImageView android:id="@+id/report_item_icon"
                   android:layout_width="30dp" android:layout_height="30dp"/>
        <TextView android:id="@+id/report_item_type"
                  android:layout_width="100dp" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp" android:textColor="@color/text_gray"
                  android:textSize="18dp"
                  android:gravity="center_vertical"/>
        <TextView android:id="@+id/report_item_percent"
                  android:layout_width="100dp" android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp" android:textColor="@color/text_gray"
                  android:textSize="18dp"
                  android:gravity="center_vertical"/>
        <TextView android:id="@+id/report_item_money"
                  android:layout_width="100dp" android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp" android:textColor="@color/text_gray"
                  android:textSize="18dp"
                  android:gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>
